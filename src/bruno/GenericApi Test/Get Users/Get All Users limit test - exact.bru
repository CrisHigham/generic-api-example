meta {
  name: Get All Users limit test - exact
  type: http
  seq: 2
}

get {
  url: {{secure}}{{server}}{{base}}/test-user?limit=5
  body: json
  auth: bearer
}

params:query {
  limit: 5
}

auth:bearer {
  token: {{token}}
}

tests {
  let testCode = 200;
  const responseJson = res.getBody();
  
  test("Get All Users - Limit", function(){
      expect(res.getStatus()).to.equal(testCode)
      expect(responseJson.noOfRecords).to.eql(5);
  
  })
  
  if (res.getStatus() != testCode){
      console.log(responseJson);
      bru.runner.stopExecution();
  } else {
      console.log("No of records: " + responseJson.noOfRecords);
  }
}
